<header>
  <nav class="navbar">
    <a href=<%= pets_path %>>
      <%= image_tag "logo.png", class: "logo" %>
    </a>
    <div class="navbar-start">
      <div class="navbar-item">
        <div class="title is-1">Новый дом для друга!</div>
      </div>
    </div>
  </nav>
</header>
<main>
  <div class="columns">
    <div class="column"></div>
    <div class="column card">

      <%= form_with scope: :pet, url: pets_path, local: true do |form| %>
        <div class="field">
          <%= form.label "Кличка", class: "label" %>
          <%= form.text_field :name, class: "input", type: "text" %>
        </div>

        <div class="field">
          <%= form.label "Вид", class: "label" %>
          <div class="select">
            <%= form.select :kind, options_for_select([%w(Кошка c), %w(Собака d)]) %>
          </div>
        </div>

        <div class="field">
          <%= form.label "Пол", class: "label" %>
          <div class="select">
            <%= form.select :sex, options_for_select([%w(Самец m), %w(Самка f)]) %>
          </div>
        </div>

        <div class="file field">
          <label class="file-label">
            <%= form.file_field :avatar, class: "file-input" %>
            <span class="file-cta">
              <span class="file-icon">
                <i class="fas fa-upload"></i>
              </span>
              <span class="file-label">
                Choose a file…
              </span>
            </span>
          </label>
        </div>

        <div class="field">
          <%= form.label :Description, class: "label" %>
          <%= form.text_area :description, class: "textarea" %>
        </div>

        <div class="field">
          <%= form.submit class: "button is-primary" %>
        </div>

        </div>
        <div class="column"></div>
        </div>
        </main>
        <footer>
          <div class="content has-text-right">
            Сделано <strong>sbkubric</strong>.
            <a href="https://www.github.com/sbkubric">GitHub</a>
            2019
          </div>
        </footer>
      <% end %>
