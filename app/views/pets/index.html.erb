<meta name="viewport" content="width=device-width, initial-scale=1">
<h1>Listing pets</h1>
 <%= link_to 'Добавить друга', new_pet_path %>


  <% @pets.each do |pet| %>
    <tr>
      <td><%= pet.name %></td>
      <td><%= pet.kind %>
      <%= image_tag(pet.avatar) %>
      <td><%= pet.description %></td>
      <td><%= link_to 'Show', pet_path(pet) %></td>
    </tr>
<% end %>
</table>
